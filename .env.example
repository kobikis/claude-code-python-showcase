# ==============================================
# MCP Server Configuration
# ==============================================

# ---------------------------------------------
# Task Master AI (Required: at least ONE)
# ---------------------------------------------
# Get keys from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Get keys from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-your-key-here

# Optional: Additional AI providers
OPENAI_API_KEY=sk-your-key-here
GOOGLE_API_KEY=your-key-here

# Task Master AI Settings (Optional)
# Options: core (7 tools), standard (15 tools), all (36 tools)
TASK_MASTER_TOOLS=standard

# ---------------------------------------------
# GitHub (Optional - for GitHub MCP)
# ---------------------------------------------
# Get token from: https://github.com/settings/tokens
# Required scopes: repo, read:org
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_github_token_here

# ---------------------------------------------
# Atlassian - Jira & Confluence (Optional)
# ---------------------------------------------
# Official Atlassian MCP uses OAuth (no env vars needed)
# It will open a browser for authentication on first use
#
# Alternative: If using Docker-based mcp-atlassian with API tokens:
# Get API token from: https://id.atlassian.com/manage-profile/security/api-tokens
# JIRA_URL=https://your-domain.atlassian.net
# JIRA_USERNAME=your-email@example.com
# JIRA_API_TOKEN=your_jira_api_token
# CONFLUENCE_URL=https://your-domain.atlassian.net/wiki
# CONFLUENCE_USERNAME=your-email@example.com
# CONFLUENCE_API_TOKEN=your_confluence_api_token

# ---------------------------------------------
# Database (Optional - for PostgreSQL MCP)
# ---------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Development database
DEV_DATABASE_URL=postgresql://user:password@localhost:5432/dev_db

# Test database
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/test_db

# ==============================================
# FastAPI Application Configuration
# ==============================================

# Application Settings
APP_NAME="My FastAPI App"
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# API Configuration
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================
# Third-Party Services
# ==============================================

# Sentry (Error Tracking)
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Redis (Caching/Queue)
REDIS_URL=redis://localhost:6379/0

# Kafka (Event Streaming)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=my-app-group

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# AWS (if using S3, SQS, etc.)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Vapi.ai (Voice AI - for voice agent integration)
VAPI_API_KEY=your-vapi-api-key
VAPI_WEBHOOK_SECRET=your-webhook-secret
VAPI_PHONE_NUMBER_ID=your-phone-number-id

# ==============================================
# Testing Configuration
# ==============================================

# Test environment settings
TEST_ENV=true
TEST_LOG_LEVEL=DEBUG

# ==============================================
# Logging and Monitoring
# ==============================================

LOG_LEVEL=INFO
LOG_FORMAT=json

# ==============================================
# Development Tools
# ==============================================

# Hot reload
RELOAD=true

# Workers (for production)
WORKERS=4

# ==============================================
# NOTES
# ==============================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Replace placeholder values with your actual credentials
# 3. Never commit .env file to git (it's in .gitignore)
# 4. For production, use environment variables or secrets manager
# 5. At minimum, set ANTHROPIC_API_KEY for Task Master AI MCP
